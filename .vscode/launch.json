    "version": "0.2.0",
    "configurations": [
        {
            "name": "Multi-connection socket - Server (Multithreading)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/multi-connection_socket/build/multithread_server",
            "args": [
                "12345"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/multi-connection_socket/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Multi-connection socket - Server (Multi-process)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/multi-connection_socket/build/multiprocess_server",
            "args": [
                "12345"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/multi-connection_socket/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Multi-connection Socket - Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/multi-connection_socket/build/client",
            "args": [
                "127.0.0.1",
                "12345"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/multi-connection_socket/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}